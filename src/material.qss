/**
 *  FloatingActionButton
 */
LineEdit, LineEdit:hover {
    border: none;
    padding-bottom: 2px;
    background-color:rgba(0,0,0,0);
    font-family: "roboto";
    border-bottom: 2px solid rgba(153,153,153,20%);    
}

LineEdit:editable{
    border: none;
    padding-bottom: 2px;
    font-size: 20px;
    selection-color: #3F51B5;
}

LineEdit:disabled{
    border: 0px solid white;
    padding-bottom: 2px;
    border-bottom: 2px solid #eeeeee;
}

LineEdit:focus{
    border: 0px solid white;
    padding-bottom: 2px;
    border-bottom: 2px solid #3F51B5;
}
LineEdit:pressed {
    border: none;
    padding-bottom: 2px;
    border-bottom: 2px solid #3F51B5;
}

/**
 *  Card
 */
Card {
    background-color: rgb(255,255,255);
    padding: 3px 16px;
    padding-bottom: 2px;
    font-family: "roboto";
    border-bottom: 2px solid rgba(153,153,153,40%);    
    border: 1px;
    border-radius: 2px;
}

